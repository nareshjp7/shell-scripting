#!bin/bash

echo "install sample"
 apt-get install httpd

VALIDATE(){
 if [ $1 -ne 0 ]; then
  echo "failure"
  exit
else
echo "success"
fi 
 }
echo "download httpd"
apt-get update
VALIDATE $1
 echo "download apache"
cd /opt
